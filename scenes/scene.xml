<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>

<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>

<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="30" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="0" y="10" z="20" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>

     <!-- Tree leaves -->
    <TEXTURE id="folhas">
        <file path="images/leaves.jpg" />                
        <amplif_factor s="3" t="4" />                           
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="images/rocks.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="images/vidral.jpg" />               
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="images/bank.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>
	
	<!-- Grass -->
    <TEXTURE id="grass">
        <file path="images/grass.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>
	
	<!-- Road -->
    <TEXTURE id="road">
        <file path="images/road.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Iron -->
    <TEXTURE id="iron">
    	<file path="images/iron.jpg" />
    	<amplif_factor s="1" t="1" />
    </TEXTURE>
    
</TEXTURES>

<MATERIALS>
	<!-- Pyramid material -->
    <MATERIAL id="piramideMaterial">                                  
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />        
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />        
        <ambient r="0.2" g="0.2" b="0.2" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree leaves material -->
	<MATERIAL id="leavesTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />        
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />       
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- Lamp post material -->
    <MATERIAL id="lightPostMaterial">                                  
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">                                  
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />       
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />        
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>

<NODES>
	<ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS>
            <NODEREF id="chao" />
			<NODEREF id="crosses" />
			<NODEREF id="roads" />
			<NODEREF id="fences" />
        </DESCENDANTS>

    </NODE>
	
	<!-- The floor -->
    <NODE id="chao">      
        <MATERIAL id="null" />    
        <TEXTURE id="grass" />       			

        <SCALE sx="8" sy="1" sz="8" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 4 5 0" />        
		</DESCENDANTS>

    </NODE>
	
	<!-- The roads -->
    <NODE id="roads">      
        <MATERIAL id="null" />    
        <TEXTURE id="road" />       		

        <DESCENDANTS>
			<NODEREF id="road1" />     
			<NODEREF id="road2" />   			
		</DESCENDANTS>

    </NODE>
	
	<!-- The road -->
    <NODE id="road1">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

		
        <SCALE sx="1.75" sy="1" sz="1.5" />
        <TRANSLATION x="12.5" y="0.01" z="9" />
		<SCALE sx="1" sy="1" sz="1.15" />
        <ROTATION axis="x" angle="-90" />
		<ROTATION axis="z" angle="-90" />
		
        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 3 9 0" />        
		</DESCENDANTS>

    </NODE>
	
	<!-- The road -->
    <NODE id="road2">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

		
        <SCALE sx="0.8" sy="1" sz="1.5" />
        <TRANSLATION x="13.5" y="0.01" z="7" />
        <ROTATION axis="x" angle="-90" />
		
        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 3 9 0" />        
		</DESCENDANTS>

    </NODE>
	
	<!-- Crosses -->
	<NODE id="crosses">      
        <MATERIAL id="null" />    
        <TEXTURE id="banco" />       			

        <TRANSLATION x="7" y="0" z="0" />

        <DESCENDANTS>
			<NODEREF id="cross1" />       
			<NODEREF id="cross2" /> 
		</DESCENDANTS>
    </NODE>
	
	<!-- Cross 1 -->
    <NODE id="cross1">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

		<TRANSLATION x="10" y="-0.5" z="20" />
		<ROTATION axis="z" angle="10" />
		<ROTATION axis="x" angle="90" />
		<TRANSLATION x="0" y="0" z="-4" />
		
        <DESCENDANTS>
            <NODEREF id="cross" />     	    
        </DESCENDANTS>
    </NODE>
	
	<!-- Cross 2 -->
    <NODE id="cross2">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

		<TRANSLATION x="25" y="-0.5" z="18" />
		<ROTATION axis="z" angle="-10" />
		<ROTATION axis="x" angle="90" />
		<TRANSLATION x="0" y="0" z="-4" />
		
        <DESCENDANTS>
            <NODEREF id="cross" />     	    
        </DESCENDANTS>
    </NODE>
	
	<!-- Generic cross -->
    <NODE id="cross">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="stick1" />
            <NODEREF id="stick2" />     	    
        </DESCENDANTS>
    </NODE>
	
	<!-- Stick 1 -->
    <NODE id="stick1">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

		<SCALE sx="0.15" sy="0.15" sz="0.8" />
		
        <DESCENDANTS>
            <NODEREF id="cube" />     	    
        </DESCENDANTS>
    </NODE>
	
	<!-- Stick 2 -->
    <NODE id="stick2">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
		
		<TRANSLATION x="-0.85" y="0" z="0.75" />
		<SCALE sx="0.5" sy="0.15" sz="0.15" />
		
        <DESCENDANTS>
            <NODEREF id="cube" />     	    
        </DESCENDANTS>
    </NODE>
	
	<!-- Generic cube -->
	<NODE id="cube">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="cube_face1" />
			<NODEREF id="cube_face2" />  
			<NODEREF id="cube_face3" />
			<NODEREF id="cube_face4" /> 	
			<NODEREF id="cube_face5" />
			<NODEREF id="cube_face6" /> 	
        </DESCENDANTS>
    </NODE>
	
	<!-- A cube face -->
    <NODE id="cube_face1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
		
		<TRANSLATION x="0" y="5" z="0" />
		<ROTATION axis="x" angle="-180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>

    </NODE>
	
	<!-- A cube face -->
    <NODE id="cube_face2">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 

		<TRANSLATION x="0" y="0" z="5" />
		
        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>
	
	<!-- A cube face -->
    <NODE id="cube_face3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
		
        <ROTATION axis="x" angle="90" />
		
        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>
	
	<!-- A cube face -->
    <NODE id="cube_face4">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
		
		<TRANSLATION x="0" y="5" z="5" />
        <ROTATION axis="x" angle="-90" />
		
        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>
	
	<!-- A cube face -->
    <NODE id="cube_face5">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
		
		<TRANSLATION x="5" y="0" z="5" />
        <ROTATION axis="y" angle="90" />
		
        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>
	
	<!-- A cube face -->
	<NODE id="cube_face6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" /> 
		
        <ROTATION axis="y" angle="-90" />
		
        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />        
        </DESCENDANTS>
    </NODE>

    <!-- Fences -->
    <NODE id="fences">
    	<MATERIAL id="null" />
    	<TEXTURE id="iron" />

    	<DESCENDANTS>
    		<NODEREF id="fence1" />
    		<NODEREF id="fence2" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence 1 -->
    <NODE id="fence1">
    	<MATERIAL id="null" />
    	<TEXTURE id="null" />

    	<DESCENDANTS>
    		<NODEREF id="fence" />
    	</DESCENDANTS>

    </NODE>

     <!-- Fence 2 -->
    <NODE id="fence2">
    	<MATERIAL id="null" />
    	<TEXTURE id="null" />

    	<TRANSLATION x="29" y="0" z="4" />

    	<DESCENDANTS>
    		<NODEREF id="fence" />
    	</DESCENDANTS>

    </NODE>

    <!-- Generic fence  -->
    <NODE id="fence">
    	<MATERIAL id="null" />
    	<TEXTURE id="null" />

    	<DESCENDANTS>
    		<NODEREF id="vert_cylinder1" />
    		<NODEREF id="vert_cylinder2" />
    		<NODEREF id="vert_cylinder3" />
    		<NODEREF id="vert_cylinder4" />
    		<NODEREF id="horz_cylinder1" />
    		<NODEREF id="horz_cylinder2" />
    		<NODEREF id="spike1" />
    		<NODEREF id="spike2" />
    		<NODEREF id="spike3" />
    		<NODEREF id="spike4" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence vertical cylinder 1 -->
    <NODE id="vert_cylinder1">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="9" z="-10" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="10 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

     <!-- Fence vertical cylinder 2 -->
    <NODE id="vert_cylinder2">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="10" z="-10" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="10 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

     <!-- Fence vertical cylinder 3 -->
    <NODE id="vert_cylinder3">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="11" z="-10" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="10 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

     <!-- Fence vertical cylinder 4 -->
    <NODE id="vert_cylinder4">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="12" z="-10" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="10 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

     <!-- Fence horizontal cylinder 1 -->
    <NODE id="horz_cylinder1">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<TRANSLATION x="10" y="7" z="8" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="5 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence horizontal cylinder 2 -->
    <NODE id="horz_cylinder2">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<TRANSLATION x="10" y="2" z="8" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="5 0.1 0.1 20 20" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence spike cylinder 1 -->
    <NODE id="spike1">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="9" z="-11" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="1 0 0.2 20 20" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence spike cylinder 2 -->
    <NODE id="spike2">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="10" z="-11" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="1 0 0.2 20 20" />
    	</DESCENDANTS>

    </NODE>

    <!-- Fence spike cylinder 3 -->
    <NODE id="spike3">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="11" z="-11" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="1 0 0.2 20 20" />
    	</DESCENDANTS>

    </NODE>

	<!-- Fence spike cylinder 4 -->
    <NODE id="spike4">
    	<MATERIAL id="defaultMaterial" />
    	<TEXTURE id="null" />

    	<ROTATION axis="x" angle="90" />
    	<TRANSLATION x="10" y="12" z="-11" />

    	<DESCENDANTS>
    		<LEAF type="cylinder" args="1 0 0.2 20 20" />
    	</DESCENDANTS>

    </NODE>




	
</NODES>